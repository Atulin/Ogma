@page "/club/{id}/forums/edit"
@model Ogma3.Pages.Club.Forums.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ClubThread</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClubThread.Title" class="control-label"></label>
                <input asp-for="ClubThread.Title" class="form-control" />
                <span asp-validation-for="ClubThread.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubThread.Body" class="control-label"></label>
                <input asp-for="ClubThread.Body" class="form-control" />
                <span asp-validation-for="ClubThread.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubThread.CreationDate" class="control-label"></label>
                <input asp-for="ClubThread.CreationDate" class="form-control" />
                <span asp-validation-for="ClubThread.CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClubThread.ClubId" class="control-label"></label>
                <select asp-for="ClubThread.ClubId" class="form-control" asp-items="ViewBag.ClubId"></select>
                <span asp-validation-for="ClubThread.ClubId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ClubThread.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
