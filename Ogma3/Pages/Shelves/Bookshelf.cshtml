@page "/Shelf/{id}/{slug?}"
@using Ogma3.Services
@model Ogma3.Pages.Shelves.Bookshelf

@{
    ViewData["Title"] = $"{Model.Shelf.Name}";
}

<h1>@Model.Shelf.Name</h1>
<span>@Model.Shelf.Description</span>

<ul>
@foreach (var s in Model.Shelf.Stories)
{
    <li>@s.Author.UserName – @s.Title – @s.Hook</li>
}
</ul>


@Html.Resource(@<script>axios.get('/api/Shelves/1').then(console.log).catch(console.error)</script>)