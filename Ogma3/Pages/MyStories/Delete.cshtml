@page
@using Utils
@model Ogma3.Pages.MyStories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Story</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.Cover)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Story.Cover)" alt="@Html.DisplayFor(model => model.Story.CoverId)" class="rounded img-thumbnail">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Story.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.Slug)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Story.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Story.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.Hook)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Story.Hook)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Story.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.IsPublished)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Story.IsPublished)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Story.Tags)
        </dt>
        <dd class="com-sm-10">
            <div class="tags">
                @foreach (var t in Model.Story.Tags)
                {
                    if (t.Namespace is null)
                    {
                        <p class="tag">@t.Name</p>
                    }
                    else
                    {
                        <p class="tag" style="background-color:rgba(@t.Namespace.Color.ToCommaSeparatedCss())">@t.Namespace.Name:@t.Name</p>
                    }
                }
            </div>
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Story.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
