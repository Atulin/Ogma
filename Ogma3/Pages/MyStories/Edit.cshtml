@page
@model Ogma3.Pages.Stories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Story</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Story.Id" />
            <div class="form-group">
                <label asp-for="Story.Title" class="control-label"></label>
                <input asp-for="Story.Title" class="form-control" />
                <span asp-validation-for="Story.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Story.Slug" class="control-label"></label>
                <input asp-for="Story.Slug" class="form-control" />
                <span asp-validation-for="Story.Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Story.Description" class="control-label"></label>
                <input asp-for="Story.Description" class="form-control" />
                <span asp-validation-for="Story.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Story.Hook" class="control-label"></label>
                <input asp-for="Story.Hook" class="form-control" />
                <span asp-validation-for="Story.Hook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Story.Cover" class="control-label"></label>
                <input asp-for="Story.Cover" class="form-control" />
                <span asp-validation-for="Story.Cover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Story.CoverId" class="control-label"></label>
                <input asp-for="Story.CoverId" class="form-control" />
                <span asp-validation-for="Story.CoverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Story.ReleaseDate" class="control-label"></label>
                <input asp-for="Story.ReleaseDate" class="form-control" />
                <span asp-validation-for="Story.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Story.IsPublished" /> @Html.DisplayNameFor(model => model.Story.IsPublished)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
