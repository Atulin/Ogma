@page
@model Ogma3.Pages.Stories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>@Model.Story.Title</h2>
<div>
    <h3>Are you sure you want to delete this story?</h3>
    <hr />
    <dl class="rows">
        <dt>
            Published on:
        </dt>
        <dd>
            @Model.Story.ReleaseDate
        </dd>
        <dt>
            Hook:
        </dt>
        <dd>
            <markdown>
                @Model.Story.Hook
            </markdown>
        </dd>
        <dt>
            Published status:
        </dt>
        <dd>
            @(Model.Story.IsPublished ? "Published" : "Not published")
        </dd>
        <dt>
            Progress:
        </dt>
        <dd>
            <partial name="_StoryStatus" model="@Model.Story.Status" />
        </dd>
        <dt>
            Score:
        </dt>
        <dd>
            @Model.Story.Score
        </dd>
        <dt>
            Chapters:
        </dt>
        <dd>
            @Model.Story.Chapters.Count
        </dd>
        <dt>
            Comments:
        </dt>
        <dd>
            @Model.Story.Chapters.Sum(c => c.CommentsThread.CommentsCount)
        </dd>
    </dl>
    
    <form method="post" class="confirm">
        <input type="hidden" asp-for="Story.Id" />
        <div class="buttons">
            <input type="submit" value="Delete" class="button accept red" />
            <a asp-page="../Story" class="button cancel" asp-route-id="@Model.Story.Id" asp-route-slug="@Model.Story.Slug">Cancel</a>
        </div>
    </form>
</div>
