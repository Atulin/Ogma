@using System.Globalization
@model Ogma3.Data.Models.Blogpost

<div class="blogpost-card">
    <a class="title" asp-page="/Blog/Post" asp-area="" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug">
        <h3>@Model.Title</h3>
    </a>
    <h4 class="author">
        <span>@Model.Author.UserName</span>,
        <time class="date" datetime="@Model.PublishDate.ToString("yyyy-MM-dd HH:mm", CultureInfo.InvariantCulture)">
            @Model.PublishDate.ToString("dd MMMM yyyy", CultureInfo.InvariantCulture)
        </time>
    </h4>
    <markdown class="excerpt">
        @Model.Body
    </markdown>
</div>