@using System.Globalization
@model Ogma3.Data.Models.ClubThread

<div class="thread-card">
    <cdn-img src="" width="16" height="16" />
    <span class="title">@Model.Title</span>
        <time class="date" datetime="@Model.CreationDate.ToString("yyyy-MM-dd HH:mm", CultureInfo.InvariantCulture)">
            @Model.CreationDate.ToString("dd MMMM yyyy", CultureInfo.InvariantCulture)
        </time>
    <div class="comment-count">.(_) @Model.CommentsThread.CommentsCount</div>
</div>