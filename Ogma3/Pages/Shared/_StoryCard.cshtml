@using Utils
@model Ogma3.Data.Models.Story

<div class="story-card">
    <img class="image" src="@Model.Cover" alt="@Model.Title" />
    <div class="body">
        <a asp-page="/Story" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug" class="title">
            <h3>@Model.Title</h3>
        </a>
        <h4 class="author">By @Model.Author.UserName</h4>
        <div class="hook">@Model.Hook</div>
        <div class="tags">
            @foreach (var t in Model.Tags)
            {
                if (t.Namespace is null)
                {
                    <p class="tag">@t.Name</p>
                }
                else
                {
                    <p class="tag" style="background-color:rgba(@t.Namespace.Color.ToCommaSeparatedCss())">@t.Namespace.Name:@t.Name</p>
                }
            }
        </div>
    </div>
</div>

