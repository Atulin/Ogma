    <div class="container-fluid">
        
        <div class="row justify-content-md-center">
            
            <div class="col-2">
                <nav class="nav flex-column">
                    <a href="" class="nav-link">About</a>
                    <a asp-area="" asp-page="/Privacy" class="nav-link">Privacy</a>
                </nav>
            </div>

            <div class="col-2">
                <nav class="nav flex-column">
                    <a asp-area="" asp-page="/Markdown" class="nav-link">Markdown reference</a>
                    <button id="theme-swap">T</button>
                </nav>
            </div>

