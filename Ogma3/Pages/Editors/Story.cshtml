@page "/new-story"
@using Ogma3.Data.Models
@model Ogma3.Pages.Editors.StoryModel

@{
    ViewData["Title"] = "Story Editor";
}

<h1>@ViewData["Title"]</h1>

<form id="story">

    <div class="form-group">
        <label for="title">Title</label>
        <p>What your story be named</p>
        <input name="title" id="title" type="text" class="form-control">
    </div>
    
    <div class="form-group">
        <label for="description">Description</label>
        <p>What your story is about</p>
        <textarea name="description" id="description" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label for="hook">Hook</label>
        <p>The first thing visible on every list of stories</p>
        <textarea name="hook" id="hook" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <label for="cover">Cover image</label>
        <p>First thing people often notice</p>
        <input name="cover" id="cover" type="file" class="form-control">
    </div>
    
    <div class="form-group">
        <label>Rating</label>
        <p>The age rating</p>
        
        @foreach (var rating in Model.Ratings)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="rating" id="@rating.Name.ToLower()" value="@rating.Id" checked>
                <label class="form-check-label" for="@rating.Name.ToLower()">@rating.Name</label>
            </div>
        }
        
    </div>
    
    <div class="form-group">
        <label for="tags">Tags</label>
        <p>To make the story easier to find</p>
        <input name="tags" id="tags" type="text" class="form-control">
    </div>
    
    <button type="submit" class="btn btn-primary">Register</button>
    
</form>