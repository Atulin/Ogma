@page "{name}"
@model Ogma3.Pages.User.IndexModel

@{
    ViewData["Title"] = $"{Model.UserData.UserName}'s profile";
    ViewData["Tab"] = "Profile";
}

<partial name="Shared/Bars/_ProfileBar" model="Model.UserData" />

@if (!string.IsNullOrEmpty(Model.UserData.Bio))
{
    <markdown preset="All">
        @Model.UserData.Bio
    </markdown>

    <hr>
}

<partial name="_Comments" model="@Model.UserData.CommentsThreadId" />
