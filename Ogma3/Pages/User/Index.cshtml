@page "{name}"
@model Ogma3.Pages.User.IndexModel

@{
    ViewData["Title"] = $"{User.Identity.Name}'s profile";
    ViewData["Tab"] = "Profile";
}

<partial name="_ProfileBar" model="Model.ProfileBar" />

@if (!string.IsNullOrEmpty(Model.Bio))
{
    <markdown preset="All">
        @Model.Bio
    </markdown>

    <hr>
}

<partial name="_Comments" model="@Model.CommentsThread.Id" />
