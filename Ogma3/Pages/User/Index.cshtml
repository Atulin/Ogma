@page "{name}"
@model Ogma3.Pages.User.IndexModel

@{
    ViewData["Title"] = $"{Model.Name}'s profile";
    ViewData["Tab"] = "Profile";
}

<vc:profile-bar name="@Model.Name" />

@if (!string.IsNullOrEmpty(Model.UserData.Bio))
{
    <markdown preset="All">
        @Model.UserData.Bio
    </markdown>

    <hr>
}

<partial name="_Comments" model="@Model.UserData.CommentsThreadId" />
