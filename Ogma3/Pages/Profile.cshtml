@page "{name}"
@model Ogma3.Pages.Profile

@{
    ViewData["Title"] = $"{User.Identity.Name}'s profile";
    ViewData["User"] = Model.CurrentUser;
    ViewData["Tab"] = "Profile";
}

<partial name="_ProfileBar" model="Model.CurrentUser"></partial>

@if (!string.IsNullOrEmpty(Model.CurrentUser.Bio))
{
    <markdown preset="All">
        @Model.CurrentUser.Bio
    </markdown>

    <hr>
}

<partial name="_Comments" model="@Model.CurrentUser.CommentsThread"></partial>
